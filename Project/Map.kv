<MenuScreen>:
    renderLoc: renderLoc
    MapView:
        zoom: 5
        lat: 90.1994
        lon: 38.6270
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        padding: [0,0,0,0]
        size_hint: .35,1 #set leftmost for width ratios
        BackgroundBoxLayout:
            orientation: 'vertical'
            size_hint: 1,1 #set left most for height ratios
            background_color: 1,1,1,1
            size_hint_max: 600, 6000
            size_hint_min: 400, 800
            BackgroundBoxLayout:
                background_color: 1,1,1,1
                orientation: 'horizontal'
                padding: [30,30,30,30]
                size_hint: 1,.3
                size_hint_max: None, 200
                Image:
                    source: './Images/logo.jpg'
                    size_hint_x: 0.25
                Label:
                    font_name: './Fonts/Hind_Madurai/HindMadurai-Medium.ttf'
                    font_size: 80
                    x: 0
                    color: 0,0,0,1
                    text: 'NavBot'
            BoxLayout:
                orientation: 'vertical'
                padding: [30,30,30,30]
                size_hint: 1,None
                size: 0,150
                BackgroundLabel:
                    text: 'Select a Destination:'
                    color: 0,0,0,1
                TextInput:
                    id: search
                    hint_text: 'Enter a Room'
                    multiline: False
                    on_text: root.renderRooms()
            BoxLayout:
                size_hint: 1,.6
                padding: [30,0,30,10]
                ScrollView:
                    BoxLayout:
                        id: renderLoc
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
            BoxLayout:
                size_hint: 1,.2
                size_hint_max: None, 150
                padding: [10,10,10,10]
                Button:
                    text: 'Go'
                    background_normal: ''
                    color: 1,1,1,1
                    background_color: 0.9411,0.498,0.0470,1
                    on_press: root.navigationTest()
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: [0,0,30,30]
        Button:
            text: 'Settings'
            size: 250,75
            size_hint: None, None
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'settings'
