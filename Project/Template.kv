<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Define the background color Template

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0

<BackgroundBoxLayout@BoxLayout+BackgroundColor>
    background_color: 0, 0, 0, 0
#Mix combine the class for any colored background
#https://kivy.org/doc/stable/api-kivy.uix.label.html

<LocationOption@Button>
    size: (0, 100)
    size_hint: (1, None)
    text: 'test'
    background_normal: ''
    background_color: 0.9,0.9,0.9,1
    color: 0,0,0,1