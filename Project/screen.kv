<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Define the background color Template

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0

<BackgroundBoxLayout@BoxLayout+BackgroundColor>
    background_color: 0, 0, 0, 0
#Mix combine the class for any colored background
#https://kivy.org/doc/stable/api-kivy.uix.label.html

<MenuScreen>:
    BoxLayout:
        BackgroundLabel:
            text: 'hehe, map goes null'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        padding: [30,30,0,0]
        size_hint: .4,1 #set leftmost for width ratios
        BackgroundBoxLayout:
            size_hint: 1,.75 #set left most for height ratios
            background_color: 1,1,1,1
            size_hint_max: 1200, 3000
            size_hint_min: 400, 600
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: [30,0,0,30]
        Button:
            text: 'Goto settings'
            size: 250,75
            size_hint: None, None
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'settings'

