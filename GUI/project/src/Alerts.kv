<Suspend>
    BackgroundBoxLayout:
        background_color: 1,0.404,0,1
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            BackgroundBoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                size: 1100, 500
                Label:
                    text: '(O_O;)'
                    font_size: 150
                    size_hint_max: None, 800
                    size_hint_min: None, 300
                    font_size_hint: 1, .5
                    bold: True
                Label:
                    text: 'Suspended'
                    font_size: 80
                    size_hint_max: None, 800
                    size_hint_min: None, 100
                    font_size_hint: 1, .2
                Label:
                    text: 'It looks like someone has selected to suspend the NavBot. If there are no needs to the continued shutdown, feel free to select "Resume", otherwise please contact: (email)'
                    size_hint_y: None
                    text_size: self.width, None
                    halign: 'center'
                    font_size: 40
                    height: self.texture_size[1]
                    width: 300
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: [30,0,0,30]
        Button:
            text: 'Resume'
            color: 0,0,0,1
            background_normal: ''
            size_hint: None, None
            width: 300
            height: 100
            border: (0, 0, 0, 0)
            on_press:
                root.manager.current = 'menu'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: [0,0,30,30]
        Button:
            text: 'Shutdown'
            color: 0,0,0,1
            background_normal: ''
            size_hint: None, None
            width: 300
            height: 100
            border: (0, 0, 0, 0)
            on_press: app.stop()

